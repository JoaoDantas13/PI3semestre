<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ProdutoServlet</servlet-name>
        <servlet-class>br.senac.sp.speedracer.servlet.ProdutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>br.senac.sp.speedracer.servlet.ClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VendasServlet</servlet-name>
        <servlet-class>br.senac.sp.speedracer.servlet.VendasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarClienteServlet</servlet-name>
        <servlet-class>br.senac.sp.speedracer.servlet.CadastrarClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarClienteServlet</servlet-name>
        <servlet-class>br.senac.sp.speedracer.servlet.AlterarClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastraProdutoServlet</servlet-name>
        <servlet-class>br.senac.sp.speedracer.servlet.CadastraProdutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InativarProdutoServlet</servlet-name>
        <servlet-class>br.senac.sp.speedracer.servlet.InativarProdutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarProdutoServlet</servlet-name>
        <servlet-class>br.senac.sp.speedracer.servlet.AlterarProdutoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProdutoServlet</servlet-name>
        <url-pattern>/ProdutoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/ClienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VendasServlet</servlet-name>
        <url-pattern>/VendasServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarClienteServlet</servlet-name>
        <url-pattern>/clientes/CadastrarClienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarClienteServlet</servlet-name>
        <url-pattern>/AlterarClienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastraProdutoServlet</servlet-name>
        <url-pattern>/produtos/CadastraProdutoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InativarProdutoServlet</servlet-name>
        <url-pattern>/InativarProdutoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarProdutoServlet</servlet-name>
        <url-pattern>/AlterarProdutoServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
